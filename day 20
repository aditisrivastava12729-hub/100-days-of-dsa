#include <stdio.h>
#include <stdlib.h>

#define MAX 100000

int main() {
    int n;
    scanf("%d", &n);

    int arr[n];
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    long long prefixSum = 0;
    long long count = 0;

    // Hash map using array (range assumption safe for typical constraints)
    long long hash[2 * MAX + 1] = {0};

    int offset = MAX;   // To handle negative prefix sums

    hash[offset] = 1;   // Prefix sum 0 occurs once initially

    for(int i = 0; i < n; i++) {
        prefixSum += arr[i];

        if(hash[prefixSum + offset] > 0) {
            count += hash[prefixSum + offset];
        }

        hash[prefixSum + offset]++;
    }

    printf("%lld", count);

    return 0;
}
